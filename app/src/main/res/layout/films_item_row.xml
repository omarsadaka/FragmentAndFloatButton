<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/film_image"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/film_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/film_image"
            android:layout_toRightOf="@+id/film_image"
            android:text="Film Title"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/film_auther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/film_title"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/film_image"
            android:layout_toRightOf="@+id/film_image"
            android:text="Film Auther"
            android:textColor="#FFF"
            android:textSize="17sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/film_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/film_auther"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/film_image"
            android:layout_toRightOf="@+id/film_image"
            android:text="Film Country"
            android:textColor="#FFF"
            android:textSize="17sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/film_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/film_country"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/film_image"
            android:layout_toRightOf="@+id/film_image"
            android:text="Film Country"
            android:textColor="#FFF"
            android:textSize="17sp"
            android:textStyle="italic" />

    </RelativeLayout>
</android.support.v7.widget.CardView>